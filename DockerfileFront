FROM node:8.11-alpine as node-angular-cli
RUN mkdir /myapp
WORKDIR /myapp
COPY ./test-pasquali-front /myapp
RUN apk update \
  && apk add --update alpine-sdk \
  && apk del alpine-sdk \
  && rm -rf /tmp/* /var/cache/apk/* *.tar.gz ~/.npm \
  && npm cache verify \
  && sed -i -e "s/bin\/ash/bin\/sh/" /etc/passwd \
  && npm install
RUN npm install -g @angular/cli
